{
  "$schema": "http:\/\/json-schema.org\/draft-04\/schema#",
  "type": "object",
  "title": "adapter",
  "definitions": {
    "ClassList": {
      "type": "array",
      "items": {
        "$ref": "#\/definitions\/ClassName"
      }
    },
    "ClassName": {
      "type": "string"
    },
    "Responses": {
      "type": "object",
      "title": "responses",
      "patternProperties": {
        "^([0-9]{3})$": {
          "type": "string"
        }
      }
    },
    "Method": {
      "type": "object",
      "title": "method",
      "properties": {
        "method": {
          "type": "string"
        },
        "version": {
          "type": "integer"
        },
        "status": {
          "type": "integer"
        },
        "active": {
          "type": "boolean"
        },
        "public": {
          "type": "boolean"
        },
        "parameters": {
          "type": "string"
        },
        "request": {
          "type": "string"
        },
        "response": {
          "type": "string"
        },
        "responses": {
          "$ref": "#\/definitions\/Responses"
        },
        "action": {
          "type": "string"
        }
      }
    },
    "Methods": {
      "type": "object",
      "title": "methods",
      "patternProperties": {
        "^(GET|POST|PUT|PATCH|DELETE)$": {
          "$ref": "#\/definitions\/Method"
        }
      }
    },
    "Version": {
      "type": "object",
      "title": "version",
      "properties": {
        "version": {
          "type": "integer"
        },
        "status": {
          "type": "integer"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "methods": {
          "$ref": "#\/definitions\/Methods"
        }
      }
    },
    "Config": {
      "type": "object",
      "title": "config",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "number"
          },
          {
            "type": "boolean"
          },
          {
            "type": "null"
          },
          {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "number"
                },
                {
                  "type": "boolean"
                },
                {
                  "type": "null"
                }
              ]
            },
            "maxItems": 16
          }
        ]
      },
      "maxProperties": 16
    },
    "Source": {
      "type": "object",
      "title": "source",
      "additionalProperties": true
    },
    "Routes": {
      "type": "object",
      "title": "routes",
      "properties": {
        "id": {
          "type": "integer"
        },
        "path": {
          "type": "string"
        },
        "config": {
          "type": "array",
          "items": {
            "$ref": "#\/definitions\/Version"
          }
        }
      }
    },
    "Action": {
      "type": "object",
      "title": "action",
      "properties": {
        "id": {
          "type": "integer"
        },
        "status": {
          "type": "integer"
        },
        "name": {
          "type": "string",
          "pattern": "[a-zA-Z0-9\\-\\_]{3,64}"
        },
        "class": {
          "type": "string"
        },
        "engine": {
          "type": "string"
        },
        "config": {
          "$ref": "#\/definitions\/Config"
        }
      }
    },
    "Schema": {
      "type": "object",
      "title": "schema",
      "properties": {
        "id": {
          "type": "integer"
        },
        "status": {
          "type": "integer"
        },
        "name": {
          "type": "string",
          "pattern": "[a-zA-Z0-9\\-\\_]{3,64}"
        },
        "source": {
          "$ref": "#\/definitions\/Source"
        }
      }
    },
    "Connection": {
      "type": "object",
      "title": "connection",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string",
          "pattern": "[a-zA-Z0-9\\-\\_]{3,64}"
        },
        "class": {
          "type": "string"
        },
        "config": {
          "$ref": "#\/definitions\/Config"
        }
      }
    }
  },
  "properties": {
    "actionClass": {
      "$ref": "#\/definitions\/ClassList"
    },
    "connectionClass": {
      "$ref": "#\/definitions\/ClassList"
    },
    "userClass": {
      "$ref": "#\/definitions\/ClassList"
    },
    "paymentClass": {
      "$ref": "#\/definitions\/ClassList"
    },
    "routes": {
      "type": "array",
      "items": {
        "$ref": "#\/definitions\/Routes"
      }
    },
    "action": {
      "type": "array",
      "items": {
        "$ref": "#\/definitions\/Action"
      }
    },
    "schema": {
      "type": "array",
      "items": {
        "$ref": "#\/definitions\/Schema"
      }
    },
    "connection": {
      "type": "array",
      "items": {
        "$ref": "#\/definitions\/Connection"
      }
    }
  },
  "additionalProperties": false
}
